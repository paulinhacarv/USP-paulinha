#include<stdlib.h>
#define COL 3
#define LINHA 3
#include<stdio.h>
    
    int main(){

        int X, O,  linha, coluna, espaco;
        char marcador1;
        char mat[LINHA][COL];
        
        
        // inserir a matriz vazia
         printf("\f");
         
        for(linha=1; linha<=LINHA; linha++){
            for(coluna=1; coluna<=COL; coluna++){
                mat[linha][coluna]= '-';
                
                printf("%c", mat[linha][coluna]);
                
            }
            printf("\n");
        }
        
        //comeÃ§ar o jogo
        printf("\n vamos comecar o jogo\f");
        
            for(espaco=1; espaco<=9; espaco++){

            printf("\n insira o numero da linha e coluna desejada ");
            scanf("%d%d", &linha, &coluna);
            
            if(mat[linha][coluna]=='-'){
                if(espaco%2==1){
                    mat[linha][coluna]='X';
                }
                else{
                    mat[linha][coluna]='O';
                }
                printf("\t%c", mat[linha][coluna]);
            }
		    else{
			printf("movimento errado");
            
            }
            
            if((mat[1][1]=mat[1][2]=mat[1][3]) || (mat[2][1]=mat[2][2]=mat[2][3]) || (mat[3][1]=mat[3][2]=mat[3][3]) ||
            (mat[1][1]=mat[2][1]=mat[3][1]) || (mat[1][2]=mat[2][2]=mat[3][2]) || (mat[1][3]=mat[2][3]=mat[3][3]) ||
            (mat[1][1]=mat[2][2]=mat[3][3]) || (mat[1][3]=mat[2][2]=mat[3][1])){
                printf("voce ganhou");
                break;
            }
            
            
            }

            

    return 0;
    }
