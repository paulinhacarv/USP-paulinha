#include <stdio.h>
#include <string.h>
#include <math.h>

int main()
{
    char condicao1='0';
    char condicao2= '0';
    char dica[100];
    char resposta[50];
    char orientacao[10];
    int natural = 0;
    int natural2=0;
    int numero_de_palavras = 0;
    char** matrix=(char*)malloc(sizeof(char)*30);
    for(int i=0; i<30; i++)
    {
        matrix[i]=malloc(sizeof(char)*50);
    }
    char matriz [99][100];
    int  i = 0;
    while (condicao1!= 's'&& condicao1!= 'S')
    {
        printf ("\nDigite a dica\n");
        gets(dica);
        strcpy(matrix[i],dica);
        i++;
        printf ("\nDigite a resposta\n");
        gets(resposta);
        strcpy(matrix[i],resposta);
        i++;
        while (condicao2!=1)
        {
            printf ("\nDigite a orientacao\n");
            gets(orientacao);
            strcpy(matrix[i],orientacao);
            if (strcmp(orientacao,"horizontal")==0||strcmp(orientacao,"Horizontal")==0||strcmp(orientacao,"HORIZONTAL")==0||
                    strcmp(orientacao,"vertical")==0||strcmp(orientacao,"Vertical")==0||strcmp(orientacao,"VERTICAL")==0||strcmp(orientacao,"v")==0)
            {
                condicao2=1;
            }
            else
            {
                printf ("\nEntrada invalida, tente novamente.\n");
            }
        }
        i++;
        condicao2=0;
        printf ("\nDigite 's' para sair.\n");
        scanf("%c",&condicao1);
        fflush(stdin);
        if (condicao1=='s'||condicao1=='S')
        {
            numero_de_palavras=  i ;
            break;
        }
        if (condicao1=='s'||condicao1=='S')
        {
            break;
        }
    }
    printf("\n\n");
    for (natural=0; natural<(numero_de_palavras); natural++)
    {
        printf("%s", matrix[natural]);
        printf("\n");
    }
    return 0;
}
