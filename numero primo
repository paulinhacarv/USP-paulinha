#include<stdio.h>

int main(){

    int num, primo;


    printf("\n digite o numero\n ");
    scanf("%d", &num);

    primo=numero_primo(num);
    if(primo){
        printf("\n o numero e primo");
    }else{
        printf("\n o numero nao e primo");
    }



    return 0;
}

int numero_primo(int num){
    int valor;
    int divisor;

    for(divisor=2; divisor<=num; divisor++){
        valor=num%divisor;

        if(valor==0 && divisor<num){
            return 0;
        }
        if(valor==0 && divisor==num){
            return 1;
        }
    }
}
