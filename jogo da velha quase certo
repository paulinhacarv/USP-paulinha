        char mat[LINHA][COL];
        
        
        // inserir a matriz vazia
         printf("\n vamos comecar o jogo\f");
         printf("\f\n");
         
        for(linha=0; linha<LINHA; linha++){
            for(coluna=0; coluna<COL; coluna++){
                mat[linha][coluna]= '-';
                
                printf("\t%c", mat[linha][coluna]);
                
            }
            printf("\n\n");
